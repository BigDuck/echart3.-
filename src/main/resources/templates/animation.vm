<!DOCTYPE html>
<html>
<head>
    <title>Echarts3模块化包引入源码-入门</title>
    <meta charset="utf-8" content="text/html">
    <link rel="stylesheet" href="/js/animate.min.css">
</head>
<body>
<!-- 为 ECharts 准备一个具备大小（宽高）的Dom -->
<div>
    <h2>Echarts</h2>
</div>
<div id="main" class="animated  bounce" style="height:400px;"></div>
<div id="chart1" style="height:400px;"></div>
</body>

<script src="/js/require.js"></script>
<script src="/js/main.js"></script>
<script>

    require([
        'jquery',
        'echarts',
        'echarts/chart/bar',
        'echarts/chart/line',
        'echarts/chart/pie',
        'echarts/component/legend',
        'echarts/component/tooltip',
        'echarts/component/toolbox',
        'echarts/chart/pie',
        'echarts/component/title'


    ], function ($, echarts) {
//
//        // 基于准备好的dom，初始化echarts实例
        var myChart = echarts.init(document.getElementById('main'));
        var chart1 = echarts.init(document.getElementById("chart1"));
        var option;
        /**default: {
  text: 'loading',
  color: '#c23531',
  textColor: '#000',
  maskColor: 'rgba(255, 255, 255, 0.8)',
  zlevel: 0
}
         */
        myChart.showLoading({text: "加载中..."});

        $.ajax({
            url: "/echart/allData",
            dataType: "JSON",
            type: "GET",
            success: function (data) {
                console.log(data);
                var xData = [];
                var yData = [];
                var pieData = [];
                var tem1 = [];

                $.each(data, function (a, b) {
                    xData.push(b.name);
                    yData.push(b.sale);
                    tem1.push(b.detail);
                    var temp = [];
                    $.each(b.detail, function (a, b) {
                        temp.push({
                            "value": b,
                            "name": a
                        });
                    });
                    pieData.push(temp);
                });
                option = {
                    title: {
                        text: '考试人数'
                    },
                    tooltip: {
                        show: true,
                        trigger: 'axis'
                    },
                    legend: {
                        data: ['参考人数']
                    },
                    xAxis: {
                        data: xData
                    },
                    yAxis: {
                        min: 10,
                        max: 100
                    },
                    series: [{
                        name: '参考人数',
                        type: 'bar',
                        data: yData
                    }]
                };
                myChart.hideLoading();
                myChart.setOption(option);
                var le = [];
                console.log(pieData);

                    $.each(pieData[0],function (index,value) {
                        le.push(value.name);
                });
                var optionPie = {
                    title: {
                        text: xData[0] + '成绩分布',
                        x: 'center'
                    },
                    tooltip: {
                        trigger: 'item',
                        formatter: "{a} <br/>{b} : {c} ({d}%)"
                    },
                    legend: {
                        orient: 'vertical',
                        left: 'left',
                        data: le
                    },
                    series: [
                        {
                            name: '成绩等级',
                            type: 'pie',
                            radius: '55%',
                            center: ['50%', '60%'],
                            data: pieData[0],
                            itemStyle: {
                                emphasis: {
                                    shadowBlur: 10,
                                    shadowOffsetX: 0,
                                    shadowColor: 'rgba(0, 0, 0, 0.5)'
                                }
                            }
                        }
                    ]
                };
                chart1.setOption(optionPie, true);
                myChart.on("click", function (params) {
                    console.log(params.name);
                        for(var i=0;i<xData.length;i++) {
                            console.log(xData[i]);
                            if (xData[i] == params.name) {
                                console.log("相等");
                                optionPie.series[0].data = pieData[i];
                                optionPie.title.text = xData[i]+"成绩分布";
                            }
                        }
                //    myChart.setOption(option, true);
                    chart1.setOption(optionPie, true);
                });

            },
            error: function (err) {
                console.log(err);
            }
        });
        function setPie(data) {

        }

        window.onresize = function () {
            console.log("改变")
            myChart.resize();
            console.log("--")
            chart1.resize();
        };

    });

</script>
</html>
